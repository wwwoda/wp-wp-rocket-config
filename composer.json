{
    "name": "woda/wp-wp-rocket-config",
    "type": "library",
    "description": "",
    "keywords": [
        "wordpress",
        "module"
    ],
    "license": "GPLv3",
    "homepage": "https://github.com/wwwoda/wp-wp-rocket-config",
    "authors": [
        {
            "name": "Woda",
            "email": "hello@woda.at",
            "homepage": "https://www.woda.at"
        },
        {
            "name": "David Mondok",
            "email": "david@woda.at"
        },
        {
            "name": "Wolfgang Schaefer",
            "email": "wolfgang@woda.at"
        }
    ],
    "support": {
        "issues": "https://github.com/wwwoda/wp-wp-rocket-config/issues",
        "source": "https://github.com/wwwoda/wp-wp-rocket-config"
    },
    "autoload": {
        "psr-4": {
            "Woda\\WordPress\\WpRocket\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Woda\\Test\\Functional\\WpRocket\\": "tests/functional",
            "Woda\\Test\\Unit\\WpRocket\\": "tests/unit"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://woda.repo.repman.io"
        }
    ],
    "require": {
        "php": "^7.4",
        "woda/wp-config": "v1.x-dev",
        "woda/wp-hook": "v1.x-dev"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "eventjet/coding-standard": "^3.2",
        "infection/infection": "^0.20.0",
        "maglnet/composer-require-checker": "^2.1",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.32",
        "phpstan/phpstan-phpunit": "^0.12.11",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "phpunit/phpunit": "^9.3",
        "szepeviktor/phpstan-wordpress": "^0.7.3",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "woda/wp-test-double": "v1.x-dev"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@check-deps",
            "@cs-check",
            "@phpstan"
        ],
        "check-deps": "vendor/bin/composer-require-checker check --config-file=require-checker.config.json",
        "cs-check": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "infection": "vendor/bin/infection --threads=4",
        "infection-xdebug": "@composer run --timeout=0 infection -- --initial-tests-php-options='-d zend_extension=xdebug.so'",
        "phpstan": "vendor/bin/phpstan analyse",
        "phpstan-pro": "vendor/bin/phpstan analyse --pro",
        "phpunit": "vendor/bin/phpunit"
    }
}