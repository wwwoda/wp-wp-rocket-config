{
  "name": "woda/wp-wp-rocket-settings",
  "type": "library",
  "description": "",
  "keywords": [
    "wordpress",
    "module"
  ],
  "license": "GPLv3",
  "homepage": "https://github.com/wwwoda/wp-wp-rocket-settings",
  "authors": [
    {
      "name": "Woda",
      "email": "hello@woda.at",
      "homepage": "https://www.woda.at"
    },
    {
      "name": "David Mondok",
      "email": "david@woda.at"
    },
    {
      "name": "Wolfgang Schaefer",
      "email": "wolfgang@woda.at"
    }
  ],
  "support": {
    "issues": "https://github.com/wwwoda/wp-wp-rocket-settings/issues",
    "source": "https://github.com/wwwoda/wp-wp-rocket-settings"
  },
  "autoload": {
    "psr-4": {
      "Woda\\WordPress\\WpRocket\\Settings\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Woda\\Test\\Functional\\WpRocket\\Settings\\": "tests/functional",
      "Woda\\Test\\Unit\\WpRocket\\Settings\\": "tests/unit"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://woda.repo.repman.io"
    }
  ],
  "require": {
    "php": "^7.4",
    "woda/wp-config": "v1.x-dev",
    "woda/wp-hook": "v1.x-dev"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "eventjet/coding-standard": "^3.2",
    "infection/infection": "^0.20.0",
    "maglnet/composer-require-checker": "^2.1",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.2.0",
    "phpstan/phpstan-phpunit": "^1.0.0",
    "phpstan/phpstan-strict-rules": "^1.1.0",
    "phpunit/phpunit": "^9.3",
    "szepeviktor/phpstan-wordpress": "^1.0.2",
    "thecodingmachine/phpstan-safe-rule": "^1.0.1",
    "woda/wp-test-double": "v1.x-dev"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@check-deps",
      "@cs-check",
      "@phpstan"
    ],
    "check-deps": "vendor/bin/composer-require-checker check --config-file=require-checker.config.json",
    "cs-check": "vendor/bin/phpcs",
    "cs-fix": "vendor/bin/phpcbf",
    "infection": "vendor/bin/infection --threads=4",
    "infection-xdebug": "@composer run --timeout=0 infection -- --initial-tests-php-options='-d zend_extension=xdebug.so'",
    "phpstan": "vendor/bin/phpstan analyse",
    "phpstan-pro": "vendor/bin/phpstan analyse --pro",
    "phpunit": "vendor/bin/phpunit"
  }
}
